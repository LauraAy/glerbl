<p id="notice"><%= notice %></p>

<h1>Books</h1>

<div id="facets">
  <h3>Author</h3>
  <ul>
    <% for row in @query.facet(:author).rows %>
      <li>
        <% if params[:author].blank? %>
          <%= link_to row.value, :author => row.value %> (<%= row.count %>)
        <% else %>
          <strong><%= row.value %></strong> (<%= link_to "remove", :author => nil %>)
        <% end %>
      </li>
    <% end %>
  </ul>
  <h3>Genre</h3>
  <ul>
    <% for row in @query.facet(:genre).rows %>
      <li>
        <% if params[:genre].blank? %>
          <%= link_to row.value, :genre => row.value %> (<%= row.count %>)
        <% else %>
          <strong><%= row.value %></strong> (<%= link_to "remove", :genre => nil %>)
        <% end %>
      </li>
    <% end %>
  </ul>
  <h3>Publisher</h3>
  <ul>
    <% for row in @query.facet(:publisher).rows %>
      <li>
        <% if params[:publisher].blank? %>
          <%= link_to row.value, :publisher => row.value %> (<%= row.count %>)
        <% else %>
          <strong><%= row.value %></strong> (<%= link_to "remove", :publisher => nil %>)
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

